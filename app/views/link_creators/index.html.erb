<table>
  <tr>
	<td><b>From:</b></td><td><%= text_field_tag :from%></td>
<td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
	<td><b>To: </b></td><td >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= text_field_tag :to%></td>
	 </tr>
	 
<tr>
   <td><%= submit_tag 'Generate' %></td>
 </tr>

 </table>
 <% end %>
 <table cellpadding="0" cellspacing="50" border="0">
 <thead>
 <tr>
 <th>Date</th>
 <th>Articles</th>
