   <td><%=link_to record[:tip_link], "http://#{record[:tip_link]}", :id=>"tip_#{record[:date]}", :date => record[:date]%></td>
   <td><%=link_to record[:album_link], "http://#{record[:album_link]}", :id=>"album_#{record[:date]}", :date => record[:date]%></td>
   </tr>
   <% end %>
 </tbody>
<% end %>
 </table>

