 <th>Songs</th>
 <th>Tip</th>
 <th>Ablums</th>
 </tr>
 </thead>
<% if @records%>
 <tboby>
   <%@records.each do |record|%>
   <tr>
   <td><%= record[:date]%></td>
   <td><%=link_to record[:article_link], "http://#{record[:article_link]}", :id=>"article_#{record[:date]}", :date => record[:date]%></td>
